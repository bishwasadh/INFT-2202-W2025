<div class="py-4">
  <h1 class="mb-4 text-primary text-center">Animal Database</h1>
  
  <div class="row mb-4">
    <div class="col-12 text-end">
      <a href="/animals/entry-form" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Animal
      </a>
    </div>
  </div>

  {{#if animals.length}}
    <div class="row g-4">
      {{#each animals}}
        <div class="col-md-6 col-lg-4">
          <div class="card animal-card h-100 shadow-sm">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
              <h5 class="mb-0">{{givenName}}</h5>
              <span class="badge {{#if isTransportable}}bg-success{{else}}bg-danger{{/if}}">
                {{#if isTransportable}}AVAILABLE{{else}}UNAVAILABLE{{/if}}
              </span>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <small class="text-muted">Scientific Name</small>
                <p class="mb-1 fw-bold">{{scientificName}}</p>
              </div>
              
              <div class="mb-3">
                <small class="text-muted">Common Name</small>
                <p class="mb-1">{{commonName}}</p>
              </div>

              <div class="row mb-3">
                <div class="col-6">
                  <small class="text-muted">Zoo</small>
                  <p class="mb-1">{{zoo}}</p>
                </div>
                <div class="col-6">
                  <small class="text-muted">Gender</small>
                  <p class="mb-1">{{gender}}</p>
                </div>
              </div>
              
              <div class="row">
                <div class="col-6">
                  <small class="text-muted">Date of Birth</small>
                  <p class="mb-1 date-display">{{dateOfBirth}}</p>
                </div>
                <div class="col-6">
                  <small class="text-muted">Age</small>
                  <p class="mb-1">{{age}} years</p>
                </div>
              </div>
            </div>
            <div class="card-footer bg-white border-top-0">
              <a href="/animals/edit-animal/{{_id}}" class="btn btn-outline-primary w-100">
                Edit Animal Details
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info text-center py-5">
      <h4>No animals found in the database</h4>
      <p class="mb-0">Get started by adding your first animal record</p>
      <div class="mt-3">
        <a href="/animals/entry-form" class="btn btn-primary">Add Animal</a>
      </div>
    </div>
  {{/if}}
</div>